    <script></script>

    <!-- CSS -->
    <style>
      body {
        overflow-x: hidden;
        background-color: #000;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 100%;
      }
      .main {
        width: 100%;
        height: 100%;
      }

      .image {
        width: 80%;
        max-width: 800px;
        height: 600px;
        /* border: 1px solid orangered; */

        margin: 0px auto;
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
        animation: spin 3s infinite linear;
      }

      .container-text {
        text-align: center;
        font-size: 2em;
        font-weight: bold;
        letter-spacing: 2px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
      }
      .btn-back {
        outline: 1px solid teal;
        padding: 5px 20px;
        border-radius: 16px;
        font-weight: 400;
        color: teal;
        width: 50%;
        max-width: 300px;
        transition: all 0.3s;

        font-size: calc(2vmin + 8px);
      }

      .btn-back:hover {
        color: white;
        outline: 1px solid white;
        background-color: teal;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
    <script>
      const btnBack = document.querySelector('#btn-back');
      btnBack.addEventListener('click', (e) => {
        window.location.replace('/feed');
      });
    </script>
  </body>
